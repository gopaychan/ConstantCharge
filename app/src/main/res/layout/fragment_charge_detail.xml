<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_span">

        <TextView
            android:id="@+id/chargeDetailValueTvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/chargeDetailTextColor" />

        <TextView
            android:id="@+id/chargeDetailKeyTvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/chargeDetailTextColor"
            android:layout_marginLeft="@dimen/common_span"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/chargeDetailDivider" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.hengchongkeji.constantcharge.view.ScoreTrend
            android:id="@+id/chargeDetailScoreTrendId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </HorizontalScrollView>

</LinearLayout>