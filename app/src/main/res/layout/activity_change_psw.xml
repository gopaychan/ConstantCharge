<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_theme_action_bar"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_space_height"
        android:background="@color/commonPageBgColor"/>

    <include layout="@layout/include_horizontal_divider"/>

    <LinearLayout
        android:id="@+id/settingShowPersonalInfoFytId"
        style="@style/mineItemLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="新密码"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/changePswNewPswEdtId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请设置新密码"
            android:inputType="textPassword"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        style="@style/horizontalDivider"
        android:layout_marginLeft="@dimen/common_margin_trbl"/>

    <LinearLayout
        android:id="@+id/settingChangePswFytId"
        style="@style/mineItemLayout"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="确认密码"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/changePswConfirmEdtId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请再次输入"
            android:inputType="textPassword"
            android:textSize="14sp"/>

    </LinearLayout>

    <include layout="@layout/include_horizontal_divider"/>

</LinearLayout>